@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="card-details mt-4 p-2 col-md-8 offset-2">
    <h1 class="text-center mb-2">Register</h1>
    <div class="col-md-6 offset-3 mt-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center">

                @foreach (var type in Model.UserTypes)
                {
                    <div class="row m-4">
                        <input asp-for="Input.UserType" type="radio" value="@type" class="custom-btn-check" id="@type">
                        <label asp-for="Input.UserType" class="custom-btn custom-btn-label" for="@type">@type</label>
                    </div>
                }
            </div>
            <div class="row col-md-12 text-center">
                <span asp-validation-for="Input.UserType" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4 d-flex justify-content-center">
                <button id="registerSubmit" type="submit" class="w-50 custom-btn">Register</button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
